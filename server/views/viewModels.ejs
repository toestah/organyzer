<head>
    <title>View Models</title>
    <%- include('bootstrap.ejs') %>
</head>

<body>
    <%- include('navbar.ejs') %>
        <div class="container-fluid">

            <h2>Models</h2>

            <hr>

            <div class="row">

                <% for(let i=0; i < models.length; i++) { %>

                    <div class="col-sm-4">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><%= models[i]._fields[0] %></h3>
                            </div>
                            <div class="panel-body">
                                <a href="#" class="btn btn-primary">Edit Model</a>
                                <a href="/createinstance/<%= models[i]._fields[0] %>" class="btn btn-success">Create New Instance</a>
                                <a href="/directory/<%= models[i]._fields[0] %>" class="btn btn-primary">View Instances</a>
                                <a href="/deletemodel/<%= models[i]._fields[0] %>" class="btn btn-danger">Delete Model</a>
                            </div>
                        </div>

                    </div>

                <% } %>

            </div>

        </div>
        <%- include('scripts.ejs') %>


</body>